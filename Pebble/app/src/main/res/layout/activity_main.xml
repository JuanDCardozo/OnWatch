<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pebble.pebble.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Contact 1"
        android:ems="10"
        android:id="@+id/contact1"
        android:layout_below="@+id/contacts"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phoneNum1"
        android:text="Phone Number"
        android:layout_below="@+id/contact1"
        android:layout_alignLeft="@+id/contact1"
        android:layout_alignStart="@+id/contact1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Contact 2"
        android:ems="10"
        android:id="@+id/contact2"
        android:layout_above="@+id/phoneNumber2"
        android:layout_alignLeft="@+id/phoneNum1"
        android:layout_alignStart="@+id/phoneNum1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phoneNumber2"
        android:text="Phone Number"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/contact2"
        android:layout_alignStart="@+id/contact2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Who do we call?"
        android:id="@+id/contacts"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Contact 3"
        android:ems="10"
        android:id="@+id/contact3"
        android:layout_below="@+id/phoneNumber2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phoneNum3"
        android:layout_below="@+id/contact3"
        android:layout_alignLeft="@+id/contact3"
        android:layout_alignStart="@+id/contact3"
        android:text="Phone Number" />

</RelativeLayout>
